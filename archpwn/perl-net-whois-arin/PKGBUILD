# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-net-whois-arin
_cpanname=Net-Whois-ARIN
pkgver=0.11
pkgrel=1
pkgdesc="Net::Whois::ARIN"
arch=('any')
url="http://search.cpan.org/~TCAINE/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/T/TC/TCAINE/${_cpanname}-${pkgver}.tar.gz)
md5sums=('a5aee39187c6272acd2a77e30847fdef')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
