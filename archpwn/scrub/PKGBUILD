# TODO: make package function

pkgname=scrub
pkgver=2.2
pkgrel=1
pkgdesc="Iteratively writes patterns on files or disk devices to make retreiving the data more difficult"
arch=('i686' 'x86_64')
url="http://code.google.com/p/diskscrub/"
groups=('blackarch' 'blackarch-forensics')
license=('GPL')
depends=('glibc')
source=(http://diskscrub.googlecode.com/files/scrub-$pkgver.tar.bz2)
md5sums=('1796abff2cd82243fcd8c757e37c9299')

build() {
  cd ${srcdir}/scrub-$pkgver

  ./configure --prefix=/usr --mandir=/usr/share/man
  make
  make DESTDIR=${pkgdir} install
}
