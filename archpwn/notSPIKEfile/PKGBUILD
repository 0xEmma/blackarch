# TODO: make package function

pkgname=notSPIKEfile
pkgver=2006
pkgrel=1
pkgdesc="notSPIKEfile is a Linux based file format fuzzing tool"
arch=(any)
url="n/a"
license=('GPL')
groups=('blackarch' 'blackarch-analysis')
source=('http://packetstorm.interhost.co.il/fuzzer/notSPIKEfile.tgz' 'x64-support_and_static-linking.patch');
md5sums=('8198bd8a3d5b18b5aa36335ab8cd3ec2' '6ef56baeb33a29bbf847465bf76a022d')

build() {
    patch -p0 < x64-support_and_static-linking.patch
    cd "$srcdir/dist"

    make -C libdisasm/src/arch/i386/libdisasm/
    make

    mkdir -p "$pkgdir/usr/bin/"
    cp notSPIKEfile "$pkgdir/usr/bin/notSPIKEfile"
}

