# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-www-checksite
pkgver=0.018
pkgrel=1
pkgdesc="WWW::CheckSite"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://search.cpan.org/~ABELTJE/WWW-CheckSite"
license=('GPL' 'PerlArtistic')
depends=('perl-template-toolkit>=2' 'perl-libwww' 'perl-www-mechanize>=1.2')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/A/AB/ABELTJE/WWW-CheckSite-$pkgver.tar.gz)
md5sums=('e7390b2b230e68459cea48267219145a')

build() {
  cd  $startdir/src/WWW-CheckSite-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$startdir/pkg
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
