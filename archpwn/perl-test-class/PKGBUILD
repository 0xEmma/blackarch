# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-test-class
_cpanname=Test-Class
pkgver=0.35
pkgrel=1
pkgdesc="Test::Class"
arch=('any')
url="http://search.cpan.org/~ADIE/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-mro-compat>=0.11')
makedepends=('perl-io>=1.09')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/A/AD/ADIE/${_cpanname}-${pkgver}.tar.gz)
md5sums=('58db8e3ee9c1a39efa038167246be8b4')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
