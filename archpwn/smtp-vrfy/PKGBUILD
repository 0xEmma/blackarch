# TODO: make package function

pkgname=smtp-vrfy
pkgver=latest
pkgrel=1
pkgdesc="An SMTP Protocol Hacker."
groups=('blackarch' 'blackarch-intel')
depends=('perl')
license=(custom:NONE)
arch=(any)
source=(http://packetstormsecurity.org/UNIX/scanners/Vrfy.tar.gz)
md5sums=('ff494d3a95d41cec4fb55ec3c7a85cf3')

build() {
  cd "$srcdir/Vrfy"
  install -Dm755 vrfy.pl $pkgdir/usr/bin/$pkgname.pl
  install -Dm644 names.txt $pkgdir/usr/share/$pkgname/names.txt
}

