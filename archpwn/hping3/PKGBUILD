# TODO: remove startdir
# TODO: make package function

pkgname=hping3
pkgver=20051105
pkgrel=1
pkgdesc="hping is a command-line oriented TCP/IP packet assembler/analyzer"
url="http://www.hping.org"
depends=('tcl' 'libpcap')
license="GPL"
arch=(i686 x86_64)
groups=('blackarch' 'blackarch-intel')
source=(http://www.hping.org/hping3-$pkgver.tar.gz)
md5sums=('ca4ea4e34bcc2162aedf25df8b2d1747')

build() {
  cd $startdir/src/hping3-$pkgver
  ./configure
  sed -i "s: -g::" Makefile
  sed -i "s: -O2 -Wall: $CFLAGS:" Makefile
  make
  mkdir -p $pkgdir/usr/sbin
  mkdir -p $pkgdir/usr/share/man/man8
  cp $srcdir/hping3-$pkgver/hping3 $pkgdir/usr/sbin
  cp $srcdir/hping3-$pkgver/docs/hping3.8  $pkgdir/usr/share/man/man8
}
