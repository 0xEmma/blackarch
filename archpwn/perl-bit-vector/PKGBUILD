# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-bit-vector
_cpanname=Bit-Vector
pkgver=7.1
pkgrel=1
pkgdesc="Fast virtual arbitrary-size-machineword CPU"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~STBEY/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl-carp-clan>=5.3')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/S/ST/STBEY/${_cpanname}-${pkgver}.tar.gz)
md5sums=('164c8574b728f6171b2a6f564fcd2e50')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
