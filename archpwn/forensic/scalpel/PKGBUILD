# TODO: make package function
pkgname=scalpel
pkgver=1.60
pkgrel=2
pkgdesc="A frugal, high performance file carver"
url="http://www.digitalforensicssolutions.com/Scalpel/"
updateurl="http://www.digitalforensicssolutions.com/Scalpel/=>scalpel-"
license='GPL'
depends=('glibc')
groups=('blackarch' 'blackarch-forensics')
source=(http://www.digitalforensicssolutions.com/Scalpel/scalpel-$pkgver.tar.gz)
md5sums=('a0ad1ae3f709bb42d30ba2dee992c3b0')
arch=('i686' 'x86_64')

build() {
  cd $srcdir/$pkgname-$pkgver
  sed -i "s/\"scalpel\.conf\"/\"\/etc\/scalpel.conf\"/" scalpel.h
  make CC_OPTS="$CFLAGS"
  install -Dm644 scalpel.conf $pkgdir/etc/scalpel.conf
  install -Dm755 scalpel $pkgdir/usr/bin/scalpel
  install -Dm644 scalpel.1 $pkgdir/usr/share/man/man1/scalpel.1
}
