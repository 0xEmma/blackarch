pkgname=kismet-earth
pkgver=20131215
pkgrel=1
pkgdesc="Various scripts to convert kismet logs to kml file to be used in Google Earth."
url="http://"
groups=('blackarch' 'blackarch-wireless')
license=('GPL')
depends=('perl' 'python')
arch=('any')
source=('pykismetearth.py'
        'kismetearth.pl'
        'node_open.png::http://docs.google.com/File?id=ddbzssqk_8ffjkzw'
        'node_closed.png::http://docs.google.com/File?id=ddbzssqk_9cgn67x')
md5sums=('e9acafce7dcecbda36ad2c0357eb92e6'
         'ae7f759841e3807a3c37d5029a7314d9'
         '7f8b81362f626dea891fae5145eeeb1b'
         '50a8e359f64f579e3cbe6c8e1a1e3971')

pkgver() {
  date +%Y%m%d
}

package() {
  cd "$srcdir"

  install -Dm755 pykismetearth.py "$pkgdir/usr/share/kismet-earth/pykismetearth.py"
  install -Dm755 kismetearth.pl "$pkgdir/usr/share/kismet-earth/kismetearth.pl"
  install -Dm644 node_open.png "$pkgdir/usr/share/kismet-earth/node_open.png"
  install -Dm644 node_closed.png "$pkgdir/usr/share/kismet-earth/node_closed.png"
}
