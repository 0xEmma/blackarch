# TODO: make package function

pkgname=openct
pkgver=0.6.20
pkgrel=1
pkgdesc="Implements drivers for several smart card readers"
arch=('i686' 'x86_64')
url="http://www.opensc-project.org/openct"
options=('!libtool')
license=("LGPL")
backup=(etc/openct.conf)
depends=('pcsclite' 'libusb' 'libtool')
groups=('blackarch' 'blackarch-smartcard')
source=(http://www.opensc-project.org/files/openct/openct-$pkgver.tar.gz \
        openct)
md5sums=('a1da3358ab798f1cb9232f1dbababc21'
         'a1878066a177db21366d50c9a37b2dd9')
build() {
  cd "${srcdir}"/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --enable-usb --enable-pcsc
  make
  make DESTDIR="${pkgdir}" install

  install -D ${srcdir}/$pkgname-$pkgver/etc/openct.udev "${pkgdir}"/etc/udev/rules.d/95-openct.rules
  install -D "${srcdir}"/$pkgname-$pkgver/etc/openct_usb "${pkgdir}"/lib/udev/openct_usb
  install -D "${srcdir}"/$pkgname-$pkgver/etc/openct_pcmcia "${pkgdir}"/lib/udev/openct_pcmcia
  install -D "${srcdir}"/$pkgname-$pkgver/etc/openct_serial "${pkgdir}"/lib/udev/openct_serial
  install -D "${srcdir}"/$pkgname-$pkgver/etc/openct.conf "${pkgdir}"/etc/openct.conf
  install -D -m755 "${srcdir}"/openct "${pkgdir}"/etc/rc.d/openct
  mkdir -p "${pkgdir}"/var/run/openct
}
