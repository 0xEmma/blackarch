# TODO: remove startdir
# TODO: make package function

pkgname=httprint
pkgver=301
pkgrel=1
pkgdesc="httprint is a web server fingerprinting tool."
arch=('i686' 'x86_64')
url="http://net-square.com/httprint"
license=('custom')
depends=(bash)
groups=('blackarch' 'blackarch-intel' 'blackarch-web-apps')
source=(http://net-square.com/httprint/httprint_linux_$pkgver.zip)
md5sums=('af53704de9c1851bd439cbe3fab3e0ad')

build() {
  cd $startdir/src/httprint_$pkgver/linux

  install -Dm755 httprint $pkgdir/usr/share/httprint/httprint
  install -Dm644 input.txt $pkgdir/usr/share/httprint/input.txt
  install -Dm644 nmapportlist.txt $pkgdir/usr/share/httprint/nmapportlist.txt
  install -Dm644 readme.txt $pkgdir/usr/share/httprint/readme.txt
  install -Dm644 signatures.txt $pkgdir/usr/share/httprint/signatures.txt

  for file in images/*; do
    install -Dm644 ${file} $pkgdir/usr/share/${pkgname}/${file}
  done

  install -d $pkgdir/usr/bin
  ln -sf /usr/share/httprint/httprint $pkgdir/usr/bin/httprint
}
