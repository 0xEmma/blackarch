# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-convert-pem
_cpanname=Convert-PEM
pkgver=0.07
pkgrel=1
pkgdesc="Read/write encrypted ASN.1 PEM files"
arch=('any')
url="http://search.cpan.org/~BTROTT/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl-class-errorhandler' 'perl-convert-asn1>=0.10' 'perl-crypt-des-ede3')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/B/BT/BTROTT/${_cpanname}-${pkgver}.tar.gz)
md5sums=('d2188dd87446004c8da882b5a1f20412')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
