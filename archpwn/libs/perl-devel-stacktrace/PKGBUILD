# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-devel-stacktrace
_cpanname=Devel-StackTrace
pkgver=1.22
pkgrel=1
pkgdesc="Stacktrace object w/ info form caller()"
arch=('any')
url="http://search.cpan.org/~DROLSKY/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/D/DR/DROLSKY/${_cpanname}-${pkgver}.tar.gz)
md5sums=('e114310258a893ac3454fb0b36a57166')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
