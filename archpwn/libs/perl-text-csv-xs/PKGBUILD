# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-text-csv-xs
_cpanname=Text-CSV_XS
pkgver=0.73
pkgrel=1
pkgdesc="Fast 8bit clean version of Text::CSV"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~HMBRAND/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/H/HM/HMBRAND/${_cpanname}-${pkgver}.tgz)
md5sums=('e048b3c4eb6ff2dd9dc4ae67be358ca4')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
