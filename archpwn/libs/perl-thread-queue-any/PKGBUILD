# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-thread-queue-any
_cpanname=Thread-Queue-Any
pkgver=0.09
pkgrel=1
pkgdesc="Thread::Queue::Any"
arch=('any')
url="http://search.cpan.org/~ELIZABETH/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/E/EL/ELIZABETH/${_cpanname}-${pkgver}.tar.gz)
md5sums=('13fc0640ea1dd4cce02619cd7ab9c488')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
