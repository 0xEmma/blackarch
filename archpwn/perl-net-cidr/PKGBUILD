# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-net-cidr
_cpanname=Net-CIDR
pkgver=0.13
pkgrel=1
pkgdesc="Manipulate netblock lists in CIDR notation"
arch=('any')
url="http://search.cpan.org/~MRSAM/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/M/MR/MRSAM/${_cpanname}-${pkgver}.tar.gz)
md5sums=('40f0f42104b314af91ab78119e0096de')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
