# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-iptables-chainmgr
_cpanname=IPTables-ChainMgr
pkgver=0.9
pkgrel=1
pkgdesc="IPTables::ChainMgr"
arch=('any')
url="http://search.cpan.org/~MRASH/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl-net-ipv4addr>=0.1')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/M/MR/MRASH/${_cpanname}-${pkgver}.tar.gz)
md5sums=('ce0aea2c3a32671cff5debe16df116fb')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
