# Maintainer: Ari Mizrahi <codemunchies@gmail.com>

pkgname=snmpcheck
pkgver=1.8
pkgrel=1
pkgdesc="enumerate information via SNMP protocol"
arch=("$CARCH")
groups=('blackarch-intel' 'blackarch-all')
url=('http://www.nothink.org/perl/snmpcheck/')
license=('GPL')
source=('http://www.nothink.org/codes/snmpcheck/snmpcheck-1.8.pl')
depends=('perl' 'perl-net-snmp')
md5sums=('a798d31ec841cd78c89548fceb2209d6')
noextract=("${pkgname}-${pkgver}.pl")

_rootpath=('usr/bin/blackarch')
_category=('intelligence_gathering')

package() {
  # missing depends: cpan -i Number::Bytes::Human
  cd "${srcdir}"
  install -dm755 ${pkgdir}/${_rootpath}/${_category}/${pkgname}
  cp --preserve=mode -r * ${pkgdir}/${_rootpath}/${_category}/${pkgname}
}
