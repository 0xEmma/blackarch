pkgname=ruby-multi_json
_gemname=multi_json
pkgver=1.7.7
pkgrel=1
pkgdesc="A common interface to multiple JSON libraries."
arch=('any')
license=('')
makedepends=('ruby')
url='http://github.com/intridea/multi_json'
source=("http://rubygems.org/downloads/multi_json-$pkgver.gem")
md5sums=('5a4c477d522fe376cead96d855779c73')
noextract=("multi_json-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
