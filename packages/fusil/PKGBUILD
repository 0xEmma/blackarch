# See COPYING for license details.

pkgname='fusil'
pkgver='1.5'
pkgrel=2
pkgdesc='A Python library used to write fuzzing programs.'
groups=('blackarch' 'blackarch-fuzzer')
url='https://pypi.python.org/pypi/fusil'
arch=('any')
license=('GPL2')
depends=('python' 'python-ptrace')
source=("http://pypi.python.org/packages/source/f/fusil/fusil-${pkgver}.tar.gz")
sha1sums=('93678fd1aeae2a83823d1d8fcc4eed5c299c6f44')

build() {
  cd "$srcdir/fusil-$pkgver"

  python setup.py build
}

package(){
  cd "$srcdir/fusil-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
