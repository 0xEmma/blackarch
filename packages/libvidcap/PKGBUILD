pkgname='libvidcap'
pkgver='0.2.1'
pkgrel=2
pkgdesc="A cross-platform library for capturing video from webcams and other video capture devices."
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://libvidcap.sourceforge.net"
license=('GPL')
source=(http://downloads.sourceforge.net/sourceforge/libvidcap/libvidcap-$pkgver.tar.gz)
sha1sums=('2956d860981eb947bbb174b3f94bccc9de3d85ed')

build() {
  cd "$srcdir/libvidcap-$pkgver"

  ./configure --prefix=/usr
  make
}

package(){
  cd "$srcdir/libvidcap-$pkgver"
  make DESTDIR="$pkgdir/" install
}

