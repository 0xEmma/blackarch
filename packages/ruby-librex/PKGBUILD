pkgname=ruby-librex
_gemname=librex
pkgver=0.0.68
pkgrel=1
pkgdesc="Ruby Exploitation Library"
arch=(any)
license=('')
makedepends=('ruby')
url='http://www.metasploit.com/'
source=("http://rubygems.org/downloads/librex-$pkgver.gem")
md5sums=('069ac838b47ad76870f7c6ba7b2f9bf4')
noextract=("librex-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
