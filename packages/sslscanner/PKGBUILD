# See COPYING for license details.

pkgname='sslscanner'
pkgver=16.9817f13
pkgrel=1
groups=('blackarch' 'blackarch-scanner' 'blackarch-crypto')
pkgdesc='Script which connects to a range of hosts/ports which are running SSL based services such as HTTPS. It then displays the certificate CN and how long is left until the certificate expires.'
arch=('any')
url='https://github.com/mikecardwell/sslScanner'
license=('GPL2')
depends=('perl' 'perl-crypt-openssl-x509' 'perl-date-parse'
         'perl-net-ssl-expiredate')
makedepends=('git')
source=('git+https://github.com/mikecardwell/sslScanner.git')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/sslScanner"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir/sslScanner"

  install -Dm755 sslScanner.pl "$pkgdir/usr/bin/sslscanner"
  install -Dm644 README "$pkgdir/usr/share/doc/sslscanner/README"
}
