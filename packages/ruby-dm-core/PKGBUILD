pkgname=ruby-dm-core
_gemname=dm-core
pkgver=1.2.1
pkgrel=1
pkgdesc="DataMapper core library"
arch=(any)
license=('')
makedepends=('ruby')
depends=('ruby-addressable')
url='https://github.com/datamapper/dm-core'
source=("http://rubygems.org/downloads/dm-core-$pkgver.gem")
md5sums=('ae4da482e5a28bda18c37ec00fdf3912')
noextract=("dm-core-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
