pkgname=cdpsnarf
pkgver=0.1.6
pkgrel=1
pkgdesc="Cisco Discovery Protocol Sniffer"
url="https://github.com/Zapotek/cdpsnarf"
license=('GPLv2')
arch=('x86_64' 'i686')
depends=('git' 'libpcap')
source=("git+https://github.com/Zapotek/cdpsnarf")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/cdpsnarf"

  # We have to get the version number from the README file. It's better than nothing. This is super ugly, but it works.
  grep -m1 'v[0-9].*[0-9].*[0-9]' README |cut -d'v' -f2 |awk '{print $1}'
}

build() {
  cd "$srcdir/cdpsnarf"
  make all

}

package() {
  cd "$srcdir/cdpsnarf"

  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin"

  cp -a * "$pkgdir/usr/share/cdpsnarf"

cat > "$pkgdir/usr/bin/cdpsnarf" << EOF
#!/bin/sh
cd /usr/share/cdpsnarf
./cdpsnarf \$@
EOF
  chmod +x "$pkgdir/usr/share/$pkgname/$pkgname"
  chmod +x "$pkgdir/usr/bin/cdpsnarf"
}
