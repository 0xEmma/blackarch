pkgname=dnmap
pkgver=0.6
pkgrel=1
pkgdesc="The distributed nmap framwork"
url="http://sourceforge.net/projects/dnmap/"
license=('GPL3')
arch=('any')
depends=('twisted' 'python2-pyopenssl')
source=("http://downloads.sourceforge.net/project/dnmap/${pkgname}_v$pkgver.tgz")
md5sums=('5d45a7307406dc039b7e06a3c5c46995')

package() {
  cd "$srcdir/dnmap_v$pkgver"

  # Base directories.
  install -dm755 "$pkgdir/usr/share/dnmap"
  install -dm755 "$pkgdir/usr/bin"

  cp -a * "$pkgdir/usr/share/dnmap"

  cat > "$pkgdir/usr/bin/dnmap_client" << EOF
#!/bin/sh
cd /usr/share/dnmap
python2 dnmap_client.py "\$@"
EOF
   chmod +x "$pkgdir/usr/bin/dnmap_client"

  cat > "$pkgdir/usr/bin/dnmap_server" << EOF
#!/bin/sh
cd /usr/share/dnmap
python2 dnmap_server.py "\$@"
EOF
   chmod +x "$pkgdir/usr/bin/dnmap_server"
}
