pkgname=dnmap
pkgver=0.6
pkgrel=1
pkgdesc="The distributed nmap framwork"
url="http://sourceforge.net/projects/dnmap/"
license=('GPL3')
arch=('any')
source=("http://downloads.sourceforge.net/project/$pkgname/${pkgname}_v$pkgver.tgz")
md5sums=('5d45a7307406dc039b7e06a3c5c46995')

package() {
        cd "${srcdir}/${pkgname}_v${pkgver}"

        install -dm755 "$pkgdir/usr/share/$pkgname"

	install -dm755 "$pkgdir/usr/bin"

        cp -a * "$pkgdir/usr/share/$pkgname/"

cat > "$pkgdir/usr/bin/dnmap_client" << EOF
#!/bin/sh
cd /usr/share/dnmap
python2 dnmap_client.py \$@
EOF
cat > "$pkgdir/usr/bin/dnmap_server" << EOF
#!/bin/sh
cd /usr/share/dnmap
python2 dnmap_server.py \$@
EOF
   chmod +x "$pkgdir/usr/bin/dnmap_client"
   chmod +x "$pkgdir/usr/bin/dnmap_server"
}



       
