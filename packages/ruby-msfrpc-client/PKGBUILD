pkgname=ruby-msfrpc-client
_gemname=msfrpc-client
pkgver=1.0.1
pkgrel=1
pkgdesc="Ruby API for the Rapid7 Metasploit Pro RPC service"
arch=(any)
license=('')
makedepends=('ruby')
depends=('ruby-msgpack' 'ruby-librex')
url='http://www.metasploit.com/'
source=("http://rubygems.org/downloads/msfrpc-client-$pkgver.gem")
md5sums=('21a11fd90b97db79c371a9801240c452')
noextract=("msfrpc-client-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
