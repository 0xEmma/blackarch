pkgname='viproy-voipkit'
pkgver='2.0'
pkgrel=1
epoch=1
groups=('blackarch' 'blackarch-exploitation' 'blackarch-fuzzer'
        'blackarch-scanner')
pkgdesc='VoIP Pen-Test Kit for Metasploit Framework'
depends=('ruby1.9' 'metasploit')
arch=('any')
url='http://viproy.com/'
license=('custom')
options=('!strip')
install='viproy-voipkit.install'
source=("http://viproy.com/files/viproy-${pkgver}.tgz")
sha1sums=('07af5441a21b795c4d276bca552a413777e370ce')

package() {
  cd "$srcdir/viproy-$pkgver"

  mkdir -p "$pkgdir/usr/share/voiproy-voipkit"

  install -Dm644 README.md "$pkgdir/usr/share/doc/voiproy-voipkit/README.md"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/voiproy-voipkit/LICENSE"

  cp -a --no-preserve=ownership * "$pkgdir/usr/share/voiproy-voipkit/"
}
