pkgname=ruby-msgpack
_gemname=msgpack
pkgver=0.5.5
pkgrel=1
pkgdesc="MessagePack, a binary-based efficient data interchange format."
arch=('any')
license=('')
makedepends=('ruby')
url='http://msgpack.org/'
source=("http://rubygems.org/downloads/msgpack-$pkgver.gem")
md5sums=('8fcde5a7df9b757244b00409b11bc7f7')
noextract=("msgpack-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
