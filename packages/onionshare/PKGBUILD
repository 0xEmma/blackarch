pkgname='onionshare'
pkgver=71.0cd457f
pkgrel=1
groups=('blackarch' 'blackarch-misc' 'blackarch-defensive')
pkgdesc='Securely and anonymously share a file of any size.'
url='https://github.com/micahflee/onionshare/'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL3')
depends=('python2' 'tor')
makedepends=('git' 'python2-setuptools')
source=('git+https://github.com/micahflee/onionshare.git')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/onionshare"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cd "$srcdir/onionshare"

  #sed -i 's|python|python2|g' onionshare.py
}

package() {
  cd "$srcdir/onionshare"

  #install -dm755 "$pkgdir/usr/share/onionshare"

  install -Dm644 README.md "$pkgdir/usr/share/doc/onionshare/README.md"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/onionshare/LICENSE"

  python2 setup.py install --root="$pkgdir" --optimize=1
  #cp -aR * "$pkgdir/usr/share/$pkgname"

 # cat > "$pkgdir/usr/bin/onionshare" << EOF
#!/bin/sh
#cd /usr/share/onionshare
#exec python2 onionshare.py "\$@"
#EOF

  #chmod +x "$pkgdir/usr/bin/onionshare"
}
