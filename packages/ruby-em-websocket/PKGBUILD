pkgname=ruby-em-websocket
_gemname=em-websocket
pkgver=0.5.0
pkgrel=1
pkgdesc="EventMachine based WebSocket server"
arch=('any')
license=('')
makedepends=('ruby')
depends=('ruby-eventmachine' 'ruby-http_parser')
url='http://github.com/igrigorik/em-websocket'
source=("http://rubygems.org/downloads/em-websocket-$pkgver.gem")
md5sums=('b6255d70a4afa8222d5c6c5a05ef12f4')
noextract=("em-websocket-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
