pkgname='mdbtools'
pkgver=efb6a85
pkgrel=1
groups=('blackarch' 'blackarch-forensic')
pkgdesc='Utilities for viewing data and exporting schema from Microsoft Access Database files'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='https://github.com/brianb/mdbtools'
license=('LGPL' 'GPL')
depends=('libgnomeui' 'unixodbc')
makedepends=('bison' 'flex' 'txt2man' 'autoconf' 'rarian')
source=('git+https://github.com/brianb/mdbtools/')
sha1sums=('SKIP')

pkgver() {
	cd $srcdir/$_gitname

	echo $(git describe --always | sed 's|mdbtools-||g' | sed 's|-|.|g')
}

prepare() {
  cd "$srcdir/mdbtools"
  autoreconf -i -f
  ./configure --prefix=/usr 
}

build() {
  cd "$srcdir/mdbtools"

  make
}

package() {
  cd "$srcdir/mdbtools"
  make DESTDIR="$pkgdir" install

  install -Dm644 ../gmdb2.desktop "$pkgdir/usr/share/applications/gmdb2.desktop"
}
