pkgname=ruby-sqlite3
_gemname=sqlite3
pkgver=1.3.7
pkgrel=1
pkgdesc="This module allows Ruby programs to interface with the SQLite3 database engine (http://www.sqlite.org)"
arch=(any)
license=('')
makedepends=('ruby')
url='http://github.com/luislavena/sqlite3-ruby'
source=("http://rubygems.org/downloads/sqlite3-$pkgver.gem")
md5sums=('b8b48dc154afe949f0a44dd49565391d')
noextract=("sqlite3-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
