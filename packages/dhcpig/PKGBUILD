pkgname=dhcpig
pkgver='git'
pkgrel=1
pkgdesc="Python script for enumeration of hosts, subdomains and emails from a given domain using google."
url="https://github.com/kamorin/DHCPig"
license=('GPLv2')
arch=(any)
depends=('python2' 'git')
source=("git+https://github.com/kamorin/DHCPig")
md5sums=('SKIP')


package() {
  cd "$srcdir/DHCPig"

  install -Dm755 pig.py "$pkgdir/usr/bin/$pkgname"
  sed -i 's/python/python2/' "$pkgdir/usr/bin/$pkgname"

}
