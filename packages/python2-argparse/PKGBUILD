# See COPYING for license details.

pkgname='python2-argparse'
pkgver='1.2.2'
pkgrel=1
arch=('any')
url='http://code.google.com/p/argparse/'
license=('CUSTOM')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/source/a/argparse/argparse-${pkgver}.tar.gz")
sha1sums=('d5eb880eafd4aae5f66f9fe94262571725d1b036')

build() {
  cd "$srcdir/argparse-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/argparse-$pkgver"

  python2 setup.py install --root="${pkgdir}" --optimize=1

  install -Dm644 LICENSE.txt \
    "$pkgdir/usr/share/licenses/python2-argparse/LICENSE.txt"
}
