pkgname=ruby-dm-sqlite-adapter
_gemname=dm-sqlite-adapter
pkgver=1.2.0
pkgrel=1
pkgdesc="Sqlite3 Adapter for DataMapper"
arch=(any)
license=('')
makedepends=('ruby')
depends=('ruby-do_sqlite3' 'ruby-dm-do-adapter')
url='http://github.com/datamapper/dm-sqlite-adapter'
source=("http://rubygems.org/downloads/dm-sqlite-adapter-$pkgver.gem")
md5sums=('cb8bb95e8262699d16c2985b555ccecd')
noextract=("dm-sqlite-adapter-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
