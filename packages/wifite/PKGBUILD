pkgname='wifite'
pkgver=138.edbdedd
pkgrel=2
groups=('blackarch' 'blackarch-cracker' 'blackarch-wireless')
pkgdesc='A tool to attack multiple WEP and WPA encrypted networks at the same time.'
arch=('any')
url='http://code.google.com/p/wifite/'
license=('GPL')
depends=('python2' 'aircrack-ng' 'reaver' 'wireshark-cli' 'pyrit' 'cowpatty')
makedepends=('git')
source=('git+https://github.com/derv82/wifite')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/wifite"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cd"$srcdir/wifite"

  sed -i 's|/usr/bin/python|/usr/bin/python2|' wifite.py
}

package() {
  cd "$srcdir/wifite"

  install -Dm755 wifite.py "$pkgdir/usr/bin/wifite"
  install -Dm644 readme.md "$pkgdir/usr/share/doc/wifite/readme.md"
}
