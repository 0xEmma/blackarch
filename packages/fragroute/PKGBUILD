pkgname=fragroute
pkgver=1.2.6
pkgrel=1
groups=('blackarch' 'blackarch-intel')
pkgdesc="A network intrusion detection evasion toolkit"
url='http://www.monkey.org/~dugsong/fragroute/'
depends=('libpcap' 'libdnet' 'libevent')
license=('GPL')
arch=('i686' 'x86_64')
source=("http://code.google.com/p/fragroute-ipv6/downloads/detail?name=fragroute-$pkgver-ipv6.tar.gz")
md5sums=('84bbd61222026234419598f8e0ed9ac3')

build() {
  cd "$srcdir/fragroute-${pkgver%.*}"
  CPPFLAGS= ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/fragroute-${pkgver%.*}"
  make "DESTDIR=$pkgdir" install
}
