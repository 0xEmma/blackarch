pkgname='nodejs-express'
pkgver='3.6.0'
pkgrel=2
pkgdesc='High performance, high class web development for node.js'
arch=('any')
url='http://expressjs.com/'
license=('MIT')
depends=('nodejs')
source=("http://registry.npmjs.org/express/-/express-$pkgver.tgz")
noextract=("express-$pkgver.tgz")
sha1sums=('94c7b0f8f506b046d4d9770b40992f224026e5d5')

package() {
  cd "$srcdir"

  local _npmdir="$pkgdir/usr/lib/node_modules/"

  mkdir -p $_npmdir

  cd $_npmdir

  npm install -g --prefix "$pkgdir/usr" "express@$pkgver"
}
