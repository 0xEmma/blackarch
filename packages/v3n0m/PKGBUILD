# See COPYING for license details.

pkgname='v3n0m'
pkgver='0.1'
pkgrel=1
groups=('blackarch' 'blackarch-scanner')
pkgdesc='A mutation of smartd0rk3r and can search for 10,446 Google dorks. It then performs several checks for vulnerabilities in the sites.'
arch=('any')
url='http://packetstormsecurity.com/files/118477/v3n0m-Scanner-0.1.html'
license=('unknown')
depends=('python2')
source=('http://packetstorm.foofus.com/UNIX/scanners/v3n0m-v.0.1.py.txt')
sha1sums=('2be8b3c57704c128d5a7e6a504395218f0e41234')

prepare() {
  cd "$srcdir"

  sed -i 's|/usr/bin/python|/usr/bin/python2|' v3n0m-v.${pkgver}.py.txt
}

package() {
  cd "$srcdir"

  install -Dm755 v3n0m-v.${pkgver}.py.txt "$pkgdir/usr/bin/v3n0m"
}
