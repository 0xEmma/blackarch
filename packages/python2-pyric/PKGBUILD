pkgname='python2-pyric'
pkgver='0.1.4'
pkgrel=1
pkgdesc='Python Radio Interface Controller Linux wireless library for the Python Wireless Developer and Pentester.'
arch=('any')
url='https://pypi.python.org/pypi/PyRIC/'
license=('GPL3')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/ca/56/fc2b3146ce7918bd05a1d013af72b4e450766341dd5768b836bda8f8afc0/PyRIC-${pkgver}.tar.gz")
sha1sums=('7ce001593d0247b0dd2ab02605d3294f4f9a00ff')

build() {
  cd "$srcdir/PyRIC-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/PyRIC-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
