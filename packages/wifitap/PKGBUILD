_gitname="GDSSecurity"
pkgname=wifitap
pkgver=2b16088
pkgrel=2
pkgdesc="WiFi injection tool through tun/tap device"
groups=(blackarch blackarch-wireless)
arch=('any')
url="https://github.com/${_gitname}/${pkgname}/"
license=('GPL2')
depends=('python2' 'scapy')
optdepends=('pysco2-svn: JIT optimization')
source=("git+https://github.com/${_gitname}/${pkgname}.git")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${pkgname}"
  git describe --always | sed 's|-|.|g'
}

package() {
  cd "${srcdir}/${pkgname}"
  find . -name '*.py' -print |
  while read file ; do
    sed -i 's|#! /usr/bin/env python|#!/usr/bin/env python2|' "$file"
    install -Dm755 "$file" "${pkgdir}/usr/bin/${file%.*}"
  done
}
