pkgname=ruby-faraday
_gemname=faraday
pkgver=0.8.8
pkgrel=1
pkgdesc="HTTP/REST API client library."
arch=(any)
license=('')
makedepends=('ruby')
depends=('ruby-multipart-post')
url='https://github.com/lostisland/faraday'
source=("http://rubygems.org/downloads/faraday-$pkgver.gem")
md5sums=('40c9a121e65753db0daf109c75812cae')
noextract=("faraday-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
