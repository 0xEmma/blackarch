# See COPYING for license details.

pkgname='CapTipper'
pkgver='v0.01'
pkgrel=1
groups=('blackarch' 'blackarch-forensic' 'blackarch-malware')
pkgdesc="Malicious HTTP traffic explorer tool "
arch=('any')
url='http://www.omriher.com/2015/01/captipper-malicious-http-traffic.html'
license=('Apache')
depends=('python2')
source=("git+https://github.com/omriher/CapTipper")
sha1sums=('SKIP')

prepare() {
  cd "$srcdir"

  find -name '*.py' -exec sed -i 's/env python$/env python2/' '{}' \;
}

package() {
  cd "$srcdir/CapTipper"

  install -dm755 "$pkgdir/usr/share/CapTipper"
  install -dm755 "$pkgdir/usr/bin"

  cp --no-preserve=ownership -R * "$pkgdir/usr/share/CapTipper"
  ln -s /usr/share/CapTipper/CapTipper.py "$pkgdir/usr/bin/"

  chmod +x "$pkgdir/usr/share/CapTipper/CapTipper.py"
}
