pkgname=pipal
pkgver=1.1
pkgrel=1
pkgdesc="Password Analyser"
url="http://www.digininja.org/projects/pipal.php"
arch=('any')
license=('GPLv3')
depends=('ruby1.9')
source=("http://www.digininja.org/files/${pkgname}_${pkgver}.tar.bz2")
md5sums=('9611ea004e612900c6a40e069c9669f4')


package() {
  cd "$srcdir/$pkgname"
  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin"
  
  cp -a * "$pkgdir/usr/share/$pkgname/"

cat > "$pkgdir/usr/bin/pipal" << EOF
#!/bin/sh
cd /usr/share/pipal
ruby-1.9 pipal.rb \$@
EOF

chmod +x "$pkgdir/usr/bin/pipal" 
}
