pkgname='hyperion'
pkgver='1.1'
pkgrel=1
pkgdesc='A runtime encrypter for 32-bit portable executables. '
url='http://nullsecurity.net/tools/binary.html'
groups=('blackarch' 'blackarch-windows')
license=('custom:unknown')
arch=('any')
source=("http://nullsecurity.net/tools/binary/Hyperion-${pkgver}.zip")
sha1sums=('7c44ea7ec802641be701c07ae2cd128d77e3eb5c')

package() {
  cd "$srcdir"

  install -dm755 "$pkgdir/usr/share/windows/hyperion"

  cp -a Hyperion-$pkgver/* "$pkgdir/usr/share/windows/hyperion"
}
