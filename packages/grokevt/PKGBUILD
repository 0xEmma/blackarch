pkgname='grokevt'
pkgver='0.5.0'
pkgrel=1
pkgdesc='A collection of scripts built for reading WindowsÂ® NT/2K/XP/2K eventlog files.'
url='http://code.google.com/p/grokevt/'
license=('GPL')
depends=('python2' 'reglookup' 'cpio')
arch=('any')
groups=('blackarch' 'blackarch-forensic')
source=("http://grokevt.googlecode.com/files/grokevt-$pkgver.tar.gz")
sha1sums=('6369460688fb02c3eb5e5a5d6c9d56b84b21cb1b')

build() {
  cd "$srcdir/grokevt-$pkgver"

  make PREFIX="$pkgdir/usr" ETC_PREFIX="$pkgdir/etc/grokevt" MAN_PREFIX="$pkgdir/usr/share/man" 
  
}

package() {
  cd "$srcdir/grokevt-$pkgver"

  install -dm755 "$pkgdir/usr/share/man/man1"
  install -dm755 "$pkgdir/usr/share/man/man7"

  python2 grokevt-distutils.py install --root="$pkgdir"
  cp -avR doc/man/man1/* "$pkgdir/usr/share/man/man1"
  cp -avR doc/man/man7/* "$pkgdir/usr/share/man/man7"
}
