pkgname=fbcmd
pkgver=1.1
pkgrel=1
pkgdesc="A Command Line Interface (CLI) for Facebook"
arch=('any')
url="http://fbcmd.dtompkins.com"
license=('GPL3')
depends=('php')
install=fbcmd.install
source=("http://fbcmd.dtompkins.com/downloads/fbcmd-${pkgver//./-}.zip"
        'fbcmd-script')
md5sums=('b2172219e66db88905a84737804ea206'
         '66960b96b4f0dd4e3693362e2996197d')

package() {
  install -dm755 "$pkgdir/usr/share/fbcmd"
  install -Dm755 "$srcdir/fbcmd-script" "$pkgdir"/usr/bin/fbcmd
  install -Dm775 "$srcdir/fbcmd/fbcmd.php" "$pkgdir"/usr/lib/fbcmd.php

  cp -r "$srcdir"/fbcmd/{fbcmd_update.php,facebook,support} "$pkgdir"/usr/lib/
  cp "$srcdir"/fbcmd/{filelist.txt,gpl.txt,readme.txt} "$pkgdir"/usr/share/fbcmd/
}
