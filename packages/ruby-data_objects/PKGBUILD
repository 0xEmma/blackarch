pkgname=ruby-data_objects
_gemname=data_objects
pkgver=0.10.13
pkgrel=1
pkgdesc="DataObjects basic API and shared driver specifications"
arch=('any')
license=('')
makedepends=('ruby')
depends=('ruby-addressable')
url='http://github.com/datamapper/do'
source=("http://rubygems.org/downloads/data_objects-$pkgver.gem")
md5sums=('97df4c5355af018998b73d9fa4906c7a')
noextract=("data_objects-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
