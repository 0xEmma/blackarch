pkgname=ruby-twitter
_gemname=twitter
pkgver=4.8.1
pkgrel=0
pkgdesc="A Ruby interface to the Twitter API."
arch=('any')
license=('')
makedepends=('ruby')
depends=('ruby-faraday' 'ruby-multi_json' 'ruby-simple_oauth')
url='http://sferik.github.com/twitter/'
source=("http://rubygems.org/downloads/twitter-$pkgver.gem")
md5sums=('367d87707eac0fa7c36db48cacbde881')
noextract=("twitter-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
