pkgname=cutycapt
pkgver=20131025
pkgrel=1
epoch=2
pkgdesc="A Qt and WebKit based command-line utility that captures WebKit's rendering of a web page."
groups=('blackarch' 'blackarch-intel')
arch=('any')
url='http://cutycapt.sourceforge.net/'
license=('GPL')
depends=('qt4')
makedepends=('subversion' 'dos2unix')
provides=('cutycapt' 'cutycapt-svn')
conflicts=('cutycapt')
source=('cutycapt.tar.gz:http://sourceforge.net/p/cutycapt/code/HEAD/tarball?path=/CutyCapt'
        'cutycapt.patch')
md5sums=('f438af493a4f5a5747bd769053293e74'
         '46e077ffa4bec6845c458032eb917cba')

pkgver() {
  date +%Y%m%d
}

prepare() {
  cd "$srcdir/CutyCapt"
  dos2unix CutyCapt.cpp
  patch -Np0 < "$srcdir/cutycapt.patch"
}

build() {
  cd "$srcdir/$_svnmod/CutyCapt"

  qmake-qt4
  make
}

package() {
  cd "${srcdir}/${_svnmod}/CutyCapt"
  install -dm755 "${pkgdir}/usr/bin"
  install -m755 "CutyCapt" "${pkgdir}/usr/bin/"
}
