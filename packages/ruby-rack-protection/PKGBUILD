pkgname='ruby-rack-protection'
_gemname=${pkgname#ruby-}
pkgver='1.5.3'
pkgrel=1
pkgdesc='You should use protection!'
arch=('any')
url='https://github.com/rkh/rack-protection'
license=('MIT')
depends=('ruby' 'rubygems')
source=("http://rubygems.org/downloads/${_gemname}-${pkgver}.gem")
noextract=(${_gemname}-${pkgver}.gem)
sha1sums=('1c28529c1d7376c61faed80f3d3297905a14c2b3')

package() {
  cd "$srcdir"

  export HOME=/tmp

  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri \
      -i "$pkgdir$_gemdir" rack-protection-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
     rack-protection-$pkgver.gem
  fi
}
