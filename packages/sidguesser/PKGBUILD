pkgname=SIDGuesser
pkgver='1_0_5'
pkgrel=1
pkgdesc="Guesses sids/instances against an Oracle database according to a predefined dictionary file."
url="http://www.cqure.net/wp/tools/database/sidguesser/"
arch=('x86_64' 'i686')
license=('GPLv3')
source=("http://www.cqure.net/tools/${pkgname}_src_${pkgver}.zip")
md5sums=('341ec4dc25ab9324924f2f306dcaa24c')

build() {
  cd "${srcdir}/${pkgname}"
   chmod +x ./configure
  ./configure
  make
}

package() {
  cd "${srcdir}/${pkgname}"
  install -dm755 "$pkgdir/usr/bin"
  make  all
  install -Dm755 "$srcdir/$pkgname/sidguess" "$pkgdir/usr/bin/sidguess"
}
