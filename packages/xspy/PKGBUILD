pkgname=xspy
pkgver=1.0c
pkgrel=1
pkgdesc="A utility for monitoring keypresses on remote X servers"
arch=('i686' 'x86_64')
# This program's actual homepage is down.
#url='http://www.acm.vt.edu/~jmaxwell/programs/xspy/xspy.html'
url='http://www.freshports.org/security/xspy/'
# TODO: Check license.
license=('GPL')
groups=(blackarch blackarch-intel)
depends=('libx11')
makedepends=('imake')
source=("ftp://ftp.freebsd.org/pub/FreeBSD/ports/distfiles/xspy-$pkgver.tar.gz")
md5sums=('3cbdb554e2f5acd58c1fe0cfd30e1416')

build() {
	cd "$srcdir/xspy"
  # I couldn't get imake to work.
	#imake

  gcc -DNULL=0 -lX11 -s support.c usleep.c xspy.c -o xspy
}

package() {
	cd "$srcdir/xspy"

  install -Dm755 xspy "$pkgdir/usr/bin/xspy"
  install -Dm755 README "$pkgdir/usr/share/doc/xspy/README"
}
