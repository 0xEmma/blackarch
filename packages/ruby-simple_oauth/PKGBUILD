pkgname=ruby-simple_oauth
_gemname=simple_oauth
pkgver=0.2.0
pkgrel=1
pkgdesc="Simply builds and verifies OAuth headers"
arch=('any')
license=('')
makedepends=('ruby')
url='https://github.com/laserlemon/simple_oauth'
source=("http://rubygems.org/downloads/simple_oauth-$pkgver.gem")
md5sums=('667c3f24f101ad072ef80f91774c7c82')
noextract=("simple_oauth-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
