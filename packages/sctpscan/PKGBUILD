pkgname=sctpscan
pkgver=1.0
pkgrel=1
pkgdesc="A network scanner for discovery and security"
url="http://www.p1sec.com/"
arch=('any')
depends=('glib2')
license=('GPLv3')
source=("git+https://github.com/philpraxis/sctpscan.git")
md5sums=('SKIP')


build() {
 cd "$srcdir/sctpscan"
 make
}

package() {
  cd "$srcdir/sctpscan"

  #Base directories
  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/licenses/sctpscan"

  #DOCs
  install -m644 LICENSE "$pkgdir/usr/share/licenses/sctpscan"

  #Binaries
  install -Dm755 sctpscan "$pkgdir/usr/bin"

}
