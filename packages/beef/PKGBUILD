pkgname=beef
pkgver=20120720
pkgrel=1
groups=(blackarch blackarch-exploitation)
pkgdesc="The Browser Exploitation Framework. It is a penetration testing tool that focuses on the web browser"
arch=(i686 x86_64)
url='http://beefproject.com/'
license=('Apache')
makedepends=('git')
depends=('ruby1.9' 'sqlite' 'ruby-eventmachine' 'ruby-thin' 'ruby-rack' 'ruby-em-websocket' 'ruby-jsmin'
         'ruby-ansi' 'ruby-term-ansicolor' 'ruby-dm-core' 'ruby-json' 'ruby-data_objects' 'ruby-erubis'
         'ruby-dm-sqlite-adapter' 'ruby-parseconfig' 'ruby-dm-migrations' 'ruby-msfrpc-client')
optdepends=('ruby-sinatra' 'ruby-twitter')
provides=('beef')
source=("git+https://github.com/beefproject/beef")
md5sums=('SKIP')

package() {
  cd "$srcdir"

  # Base directories.
  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/beef"

  # eventmachine 0.12.10 -> eventmachine 1.0.0beta4
  #sed -i 's|0.12.10|1.0.0beta4|' ${pkgdir}/usr/src/${pkgname}/Gemfile

  # Make joint script.
  cat > "$pkgdir/usr/bin/beef" <<EOF
#!/bin/sh
cd /usr/share/beef
./beef "\$@"
EOF
  chmod +x "$pkgdir/usr/bin/beef"
}
