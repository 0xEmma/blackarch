pkgname='wordbrutepress'
pkgver='1.1'
pkgrel=1
groups=('blackarch' 'blackarch-cracker' 'blackarch-webapp')
pkgdesc='Python script that performs brute forcing against WordPress installs using a wordlist.'
arch=('any')
url='http://www.homelab.it/index.php/2014/11/03/wordpress-brute-force-multithreading/'
license=('custom:unknown')
depends=('python2' 'python2-httplib2')
source=('http://www.homelab.it/wp-content/uploads/2015/04/W0rdBRUTEpr3ss_v1_1.py_.txt')
sha1sums=('5ebc77f715f193b2cc8b3277c1a94fcb839aca25')

prepare() {
  cd "$srcdir"

  sed -i 's|/usr/bin/env python|/usr/bin/env python2|' \
    W0rdBRUTEpr3ss_v1_1.py_.txt
}

package() {
  cd "$srcdir"

  install -Dm755 W0rdBRUTEpr3ss_v1_1.py_.txt "$pkgdir/usr/bin/wordbrutepress"
}
