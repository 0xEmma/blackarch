pkgname=smtp-user-enum
pkgver=1.2
pkgrel=1
pkgdesc="Username guessing tool primarily for use against the default Solaris SMTP service. Can use either EXPN, VRFY or RCPT TO. "
url="http://pentestmonkey.net/tools/user-enumeration/smtp-user-enum"
arch=('any')
license=('GPLv2')
depends=('perl')
source=("http://pentestmonkey.net/tools/smtp-user-enum/${pkgname}-${pkgver}.tar.gz")
md5sums=('14482d891e90f61a9b0e6a7c46a3c452')
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  install -Dm644 CHANGELOG "$pkgdir/usr/share/$pkgname/CHANGELOG"
  install -Dm644 $pkgname-user-docs.pdf "$pkgdir/usr/share/$pkgname/$pkgname-user-docs.pdf"
  install -Dm755 ${pkgname}.pl "$pkgdir/usr/bin/$pkgname" 
}
