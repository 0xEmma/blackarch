# TODO: make package function
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

pkgname=perl-net-packet-target
_cpanname=Net-Packet-Target
pkgver=1.01
pkgrel=1
pkgdesc="Net::Packet::Target"
arch=('any')
url="http://search.cpan.org/~GOMOR/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl-class-gomor>=1.00' 'perl-net-packet>=3.00')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/G/GO/GOMOR/${_cpanname}-${pkgver}.tar.gz)
md5sums=('7165c14c0cd02ec082c27b05a9ba5874')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
