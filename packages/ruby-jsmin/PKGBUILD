pkgname=ruby-jsmin
_gemname=jsmin
pkgver=1.0.1
pkgrel=1
pkgdesc="Ruby implementation of Douglas Crockford's JSMin JavaScript minifier."
arch=(any)
license=('')
makedepends=('ruby')
url='http://github.com/rgrove/jsmin/'
source=("http://rubygems.org/downloads/jsmin-$pkgver.gem")
md5sums=('b64f1b806fe267c927240b6c41a16298')
noextract=("jsmin-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
