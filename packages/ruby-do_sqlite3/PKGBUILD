pkgname=ruby-do_sqlite3
_gemname=do_sqlite3
pkgver=0.10.13
pkgrel=1
pkgdesc="DataObjects Sqlite3 Driver"
arch=('any')
license=('')
makedepends=('ruby')
depends=('ruby-data_objects')
url=''
source=("http://rubygems.org/downloads/do_sqlite3-$pkgver.gem")
md5sums=('568a1f79fa430a5f9165fd403889e6a2')
noextract=("do_sqlite3-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
