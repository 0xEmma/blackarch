pkgname=ruby-multipart-post
_gemname=multipart-post
pkgver=1.2.0
pkgrel=1
pkgdesc="A multipart form post accessory for Net::HTTP."
arch=(any)
license=('')
makedepends=('ruby')
url='https://github.com/nicksieger/multipart-post'
source=("http://rubygems.org/downloads/multipart-post-$pkgver.gem")
md5sums=('03f8adab69339730dae5755bedc726f0')
noextract=("multipart-post-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
