pkgname="radare2"
pkgver='0.9.7'
pkgrel=2
groups=('blackarch' 'blackarch-debugger' 'blackarch-disassembler' 'blackarch-reversing')
pkgdesc="Open-source tools to disasm, debug, analyze and manipulate binary files."
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='http://radare.org/'
license=('GPL3' 'LGPL3')
source=("http://radare.org/get/radare2-$pkgver.tar.xz")
md5sums=('932e2105a2e82d11266324fe2608539d')
sha256sums=('f4e88398487b6a24b10219908a4a4f71899989787a00d954f61f87be97d54d07')

build() {
  cd "$srcdir/radare2-$pkgver"

  export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/radare2-$pkgver"

  make DESTDIR=$pkgdir install

  install -D -m 644 man/* "$pkgdir/usr/share/man/man1"
}
