pkgname=termineter
pkgver=0.1.0
pkgrel=1
pkgdesc="smart meter testing framework"
url="https://code.google.com/p/termineter/"
arch=('any')
license=('GPLv3')
depends=('python2' 'python2-pyserial')
source=("https://termineter.googlecode.com/files/${pkgname}-v${pkgver}.tar.bz2")
md5sums=('2ea2025b17d9409ef543310269cad355')


package() {
  cd "$srcdir/$pkgname"
 
  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin/"
  cp -a * "$pkgdir/usr/share/$pkgname"

cat > "$pkgdir/usr/bin/$pkgname" << EOF
#/bin/sh"                                             
cd /usr/share/termineter
python2 termineter.py \$@
EOF

 chmod +x "$pkgdir/usr/bin/termineter"

}
