pkgname=blackarch-menu-xfce
pkgver=20140122
pkgrel=1
pkgdesc='A BlackArch menu for XFCE'
arch=('any')
url='http://blackarch.org/'
license=('GPL')
install=blackarch-menu-xfce.install
source=('blackarch-menu.xml')
md5sums=('71c97dec5c01b39fd579e9e605fbebb5')

pkgver() {
  date +%Y%m%d
}

package() {
  install -Dm644 "$srcdir/blackarch-menu.xml" "$pkgdir/etc/xdg/xfce/desktop/blackarch-menu.xml"
}
