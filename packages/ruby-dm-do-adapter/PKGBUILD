pkgname=ruby-dm-do-adapter
_gemname=dm-do-adapter
pkgver=1.2.0
pkgrel=1
pkgdesc="DataObjects Adapter for DataMapper"
arch=('any')
license=('')
makedepends=('ruby')
depends=('ruby-data_objects' 'ruby-dm-core')
url='http://github.com/datamapper/dm-do-adapter'
source=("http://rubygems.org/downloads/dm-do-adapter-$pkgver.gem")
md5sums=('67efc2f3847ee27b89103b6103d78824')
noextract=("dm-do-adapter-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
