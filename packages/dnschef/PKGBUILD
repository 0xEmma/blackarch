pkgname=dnschef
pkgver='0.2.1'
pkgrel=1
pkgdesc="a highly configurable DNS proxy for pentesters"
url="http://thesprawl.org/projects/dnschef/"
arch=('any')
depends=('python2')
license=('GPLv3')
source=("http://thesprawl.org/media/projects/${pkgname}-${pkgver}.tar.gz")
md5sums=('cb567d575cc837c49e51d95349986875')


package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  install -dm755 "$pkgdir/usr/share/$pkgname"
  install -dm755 "$pkgdir/usr/bin"

  cp -a * "$pkgdir/usr/share/$pkgname"

cat > "$pkgdir/usr/bin/dnschef" << EOF
#!/bin/sh
cd /usr/share/dnschef
python2 dnschef.py \$@
EOF

chmod +x "$pkgdir/usr/bin/dnschef"
}
