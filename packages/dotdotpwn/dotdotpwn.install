post_install() {

grep -q 'dotdotpwn' /etc/group || groupadd dotdotpwn
                            
chgrp dotdotpwn /usr/share/dotdotpwn/Reports
chmod g+w /usr/share/dotdotpwn/Reports

chgrp dotdotpwn /usr/share/dotdotpwn/retrieved_files
chmod g+w /usr/share/dotdotpwn/retrieved_files

}

post_upgrade() {
  post_install
}

post_remove() {
  groupdel dotdotpwn
}
