pkgname='sleuthkit'
pkgver='4.1.3'
pkgrel=1
groups=('blackarch' 'blackarch-windows')
pkgdesc="library and collection of tools that allow you to investigate volume and file system data."
url="http://www.sleuthkit.org"
license=('GPL')
makedepends=('git')
depends=('autoconf' 'automake' 'libtool')
arch=('any')
source=('git+git@github.com:sleuthkit/sleuthkit.git')
install=('sleuthkit.install')
sha1sums=('SKIP')

pkgver()
{
    cd sleuthkit
    git describe --always | sed 's|-|.|g' | sed 's/^v//'
}

package()
{
    cd "$srcdir/sleuthkit-$pkgver"
    ./configure
    make
    make install
    #./bootstrap
}
