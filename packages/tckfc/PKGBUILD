# This file is part of BlackArch Linux ( http://blackarch.org ).
# See COPYING for license details.

pkgname='tckfc'
pkgver=3.40d6086
pkgrel=2
groups=('blackarch' 'blackarch-cracker')
pkgdesc='TrueCrypt key file cracker.'
arch=('any')
url='https://github.com/Octosec/tckfc'
license=('MIT')
depends=('python2' 'truecrypt')
makedepends=('git')
source=('git+https://github.com/Octosec/tckfc.git')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/tckfc"

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cd "$srcdir/tckfc"

  sed -i '1i\#!/usr/bin/python2' tckfc.py
}

package() {
  cd "$srcdir/tckfc"

  install -Dm755 tckfc.py "$pkgdir/usr/bin/tckfc"
  install -Dm644 README.md "$pkgdir/usr/share/doc/tckfc/README.md"
}
