pkgname='python2-pyyaml'
pkgver='3.11'
pkgrel=1
pkgdesc='YAML parser and emitter for python2.'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
depends=('libyaml' 'python2')
makedepends=('python2-setuptools')
url='http://pyyaml.org/wiki/PyYAML/'
license=('MIT')
options=(!emptydirs)
source=("https://pypi.python.org/packages/source/P/PyYAML/PyYAML-${pkgver}.tar.gz")
sha1sums=('1a2d5df8b31124573efb9598ec6d54767f3c4cd4')

build() {
  cd "$srcdir/PyYAML-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/PyYAML-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}
