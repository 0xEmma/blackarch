_author=DPARIS
_perlmod=Crypt-IDEA
pkgname=perl-crypt-idea
pkgver=1.08
pkgrel=2
pkgdesc="Perl interface to IDEA block cipher"
arch=(any)
url="http://search.cpan.org/~$_author/$_perlmod-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0', 'gmp')
options=(!emptydirs)
source=(http://cpan.perl.org/modules/by-authors/id/D/DP/$_author/$_perlmod-$pkgver.tar.gz
        fix-build-error.diff)
md5sums=('6718c630fa8ac28cb989b7db763ed97c'
         '8e2bdd53b039cf29db3fe0c92d08ce61')

prepare() {
  cd "$srcdir/$_perlmod-$pkgver"
  patch -i "$srcdir/fix-build-error.diff"
}

build() {
  cd "$srcdir/$_perlmod-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd "$srcdir/$_perlmod-$pkgver"
  make install DESTDIR="$pkgdir/"
}
