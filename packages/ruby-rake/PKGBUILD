pkgname=ruby-rake
_gemname=rake
pkgver=10.1.0
pkgrel=2
pkgdesc="Ruby based make-like utility."
arch=('any')
license=('')
makedepends=('ruby')
url='http://rake.rubyforge.org'
source=("http://rubygems.org/downloads/rake-$pkgver.gem")
md5sums=('540ce3e4bbfab4fba3f74c2aa3d2295f')
noextract=("rake-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  if [[ $CARCH == arm* ]] ; then
    gem install --no-user-install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  else
    gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_realname-$pkgver.gem
  fi
}
