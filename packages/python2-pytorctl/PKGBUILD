pkgname='python2-pytorctl'
pkgver=68bc5de
pkgrel=2
pkgdesc='A Python Tor controller with extensions to support path building and various constraints on node and path selection, as well as statistics gathering.'
arch=('any')
license=('custom')
url="http://fscked.org/projects/torctl"
depends=('python2' 'python2-geoip')
makedepends=('git')
optdepends=('python-elixir: SQL Support')
source=("git+git://git.torproject.org/${pkgname}.git"
        'setup.py')
md5sums=('SKIP'
         'd69deeb0d0f56ec6dcef1aa2afba6e5a')

pkgver() {
  cd ${srcdir}/${pkgname}
  git describe --always | sed 's|-|.|g'
}

package() {
  install -d ${pkgdir}/usr/share/{licenses,doc}/${pkgname}
  install -Dm644 ${srcdir}/${pkgname}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  install -Dm644 ${srcdir}/${pkgname}/README ${pkgdir}/usr/share/doc/${pkgname}

  python2 setup.py install --root=${pkgdir} --optimize=1
}
