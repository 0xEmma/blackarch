pkgname=UAtester
pkgver=1.06
pkgrel=1
pkgdesc="User Agent String Tester"
url="http://code.google.com/p/ua-tester/"
arch=('any')
license=('BSD')
depends=('python2')
source=("http://ua-tester.googlecode.com/files/${pkgname}_${pkgver}.py")


package() {
  cd "$srcdir"
  install -Dm755 ${pkgname}_${pkgver}.py "$pkgdir/usr/bin/$pkgname"
  sed -i 's/python/python2/' "$pkgdir/usr/bin/$pkgname"
}
md5sums=('0b76d012b9ff31ef66f0f571521ff3e2')
