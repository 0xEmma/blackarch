pkgname=ruby-eventmachine
_gemname=eventmachine
pkgver=1.0.3
pkgrel=1
pkgdesc="Ruby/EventMachine library"
arch=(any)
license=('')
makedepends=('ruby')
url='http://rubyeventmachine.com'
source=("http://rubygems.org/downloads/eventmachine-$pkgver.gem")
md5sums=('579e4829c279995da1af5ac87713e1d0')
noextract=("eventmachine-$pkgver.gem")

package() {
  cd "$srcdir"
  local _gemdir=$(ruby -e 'puts Gem.default_dir')
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
