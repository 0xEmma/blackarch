pkgname=libpst
pkgver=0.6.61
pkgrel=1
pkgdesc="Utilities are supplied to convert email messages to both mbox and MH mailbox formats."
url="http://www.five-ten-sg.com/libpst/"
arch=('i686' 'x86_64')
license=('custom')
depends=('python2')
source=("http://www.five-ten-sg.com/libpst/packages/libpst-$pkgver.tar.gz")
md5sums=('f317c8787d4db690a14f2c5e3813c3b1')

build(){
  cd "$srcdir/libpst-$pkgver"
  ./configure --prefix='/usr' PYTHON_VERSION='2'
  make
}

package() {
  cd "$srcdir/libpst-$pkgver"
  
  make DESTDIR=$pkgdir install 


}

