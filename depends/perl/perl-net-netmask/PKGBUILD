# Maintaner : Ari Mizrahi <codemunchies@gmail.com>

pkgname=perl-net-netmask
pkgver=1.9016
pkgrel=1
pkgdesc="Parse, manipulate and lookup IP network blocks."
arch=("$CARCH")
groups=('blackarch-depends' 'blackarch-all')
url=("http://search.cpan.org/~muir/Net-Netmask-${pkver}/")
license=('Unknown')
source=("http://search.cpan.org/CPAN/authors/id/M/MU/MUIR/modules/Net-Netmask-${pkgver}.tar.gz")
depends=('perl')
md5sums=('174606b568f8545b8968aecf50ba7a37')
options=('!emptydirs')

package() {
  cd  "${srcdir}"/Net-Netmask-${pkgver}

  # BUILD LIBRARY
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 
  make

  # INSTALL LIBRARY
  make pure_install doc_install DESTDIR=${pkgdir}

  # UNECESSARY
  find ${pkgdir} -name '.packlist' -delete
  find ${pkgdir} -name '*.pod' -delete
}
