pkgname=twofi
pkgver=1.0
pkgrel=3
groups=('blackarch' 'blackarch-intel')
pkgdesc='Twitter Words of Interest'
arch=('any')
url="http://www.digininja.org/projects/twofi.php"
license=('CCPL')
depends=('ruby')
source=("http://www.digininja.org/files/twofi_1.0.tar.bz2")
md5sums=('f708460f620fe8159f3ec6cf4f28cc75')

package() {
  install -dm755 "$pkgdir/usr/share/twofi"
  install -Dm644 "$srcdir/twofi/README" "$pkgdir/usr/share/twofi/README"
  install -Dm755 "$srcdir/twofi/twofi.rb" "$pkgdir/usr/bin/twofi"
}
